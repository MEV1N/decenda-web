// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id                String             @id @default(uuid())
  name              String             @unique
  password_hash     String
  invite_code       String             @unique
  members_count     Int                @default(1)
  has_seen_prologue Boolean            @default(false)
  role              Role               @default(PLAYER)
  points            Int                @default(0)
  created_at        DateTime           @default(now())
  solves            Solve[]
  unlockedLocations UnlockedLocation[]
}

enum Role {
  PLAYER
  ADMIN
}

model Location {
  id          String             @id
  name        String
  description String
  is_starting Boolean            @default(false)
  challenges  Challenge[]
  unlockedBy  UnlockedLocation[]
}

model Challenge {
  id                String   @id
  location_id       String
  title             String
  description       String
  flag_hash         String
  points            Int      @default(0)
  instance_required Boolean  @default(false)
  unlocksPoints     Boolean  @default(true) // Should completing this give points? Prologue gives 0 points but maybe unlocks
  unlocksLocations  String[] // Array of location ids this challenge unlocks
  location          Location @relation(fields: [location_id], references: [id])
  solves            Solve[]
  hints             Hint[]
}

model Solve {
  id           String    @id @default(uuid())
  team_id      String
  challenge_id String
  solved_at    DateTime  @default(now())
  team         Team      @relation(fields: [team_id], references: [id], onDelete: Cascade)
  challenge    Challenge @relation(fields: [challenge_id], references: [id], onDelete: Cascade)

  @@unique([team_id, challenge_id])
}

model UnlockedLocation {
  id          String   @id @default(uuid())
  team_id     String
  location_id String
  unlocked_at DateTime @default(now())
  team        Team     @relation(fields: [team_id], references: [id], onDelete: Cascade)
  location    Location @relation(fields: [location_id], references: [id], onDelete: Cascade)

  @@unique([team_id, location_id])
}

model Hint {
  id             String    @id @default(uuid())
  challenge_id   String
  hint_text      String
  penalty_points Int       @default(10)
  challenge      Challenge @relation(fields: [challenge_id], references: [id])
}
